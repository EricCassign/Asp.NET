@model Library.Models.CheckoutM.CheckoutDTO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-header"> Place hold on @Model.Title</h3>
<div class="row">
    <div class="col-md-3">
        <div>
            <img class="img-responsive" src="@Model.ImageUrl" />
        </div>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm("PlaceHold", "Catalog", FormMethod.Post))
        {
            @Html.HiddenFor(a => a.AssetId)
            <div>
                <div class="alert alert-info">This item has <b>@Model.HoldCount</b> current holds.</div>
                <label>
                    Enter Library Card ID.
                </label>
                @Html.TextBoxFor(a => a.LibraryCardId)
            </div>
            <div>
                <button type="submit" class="btn btn-success">Place Hold</button>
            </div>
        }
    </div>
</div>