@using LibraryData
@model Library.Models.Catalog.LibraryAssetApi
@{
    ViewData["Title"] = "Libray Catalog Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row table-responsive">
    <h2>@ViewData["Title"]</h2>
    <table class="table">
        <thead>
        <tr>
            <td></td>
            <td>Image</td>
            <td>Title</td>
            <td>Author/Director</td>
            <td>Type</td>
        </tr>
        </thead>
        <tbody>
        @{
          int i = 0;
        }
        @foreach (var asset in Model.Asset) 
        {
           i++;
            <tr>
                <td>@i .</td>
                <td>
                   
                    <img class="img-responsive" src="@asset.ImageUrl" alt="@asset.Title.ToLower()"/>
                </td>
                <td>@asset.Title</td>
                <td>@asset.AuthorOrDirector</td>
                <td>@asset.Type</td>
            </tr>
        }
        </tbody>
    </table> 
</div>


